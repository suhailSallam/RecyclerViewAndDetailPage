<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="438dp"
        android:layout_height="48dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="left"
        android:text="Name goes here"
        android:textColor="#1e3799"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/imageViewId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <TextView
        android:id="@+id/price"
        android:layout_width="438dp"
        android:layout_height="48dp"
        android:fontFamily="@font/aref_ruqaa"
        android:gravity="left"
        android:text="Price goes here"
        android:textColor="#4a69bd"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.778"
        app:layout_constraintStart_toEndOf="@+id/imageViewId"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/s_Desc"
        android:layout_width="79dp"
        android:layout_height="92dp"
        android:fontFamily="cursive"
        android:text="TextView"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewId"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/price"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063"
        tools:srcCompat="@tools:sample/avatars" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewId">

        <TextView
            android:id="@+id/l_Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:fontFamily="@font/artifika"
            android:paddingLeft="16sp"
            android:paddingTop="5dp"
            android:text="Long Discription goes here"
            android:textColor="#6a89cc"
            android:textSize="15sp" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>